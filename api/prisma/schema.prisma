// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  name      String
  email     String
  createdAt DateTime @default(now())
}

model Planta {
  id           String   @id @default(cuid())
  imagem       String
  createdAt    DateTime @default(now())
  hardware     String
  usuario      String
  NOME_PLANTA  String
  BOMBA_STATUS String
  REGA_TEMPO   String
  UMIDADE      String
  REGAS        String
}
